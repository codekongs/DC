<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_multi_choice_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_44"
    android:background="@color/colorLightGray">
    <Button
        android:id="@+id/id_cancel_select_btn"
        android:layout_width="@dimen/len_48"
        android:layout_height="@dimen/len_28"
        android:background="@drawable/radius_rect_shape"
        android:layout_margin="@dimen/len_8"
        android:layout_marginLeft="@dimen/len_20"
        android:layout_marginStart="@dimen/len_20"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="@string/str_cancel"/>
    <TextView
        android:id="@+id/id_selected_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/len_28"
        android:gravity="center"
        tools:text="选中23项目"
        android:layout_centerInParent="true"/>
    <Button
        android:id="@+id/id_select_all_btn"
        android:layout_width="@dimen/len_48"
        android:layout_height="@dimen/len_28"
        android:background="@drawable/radius_rect_shape"
        android:layout_margin="@dimen/len_8"
        android:layout_marginEnd="@dimen/len_20"
        android:layout_marginRight="@dimen/len_20"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/str_check_all"/>
</RelativeLayout>
