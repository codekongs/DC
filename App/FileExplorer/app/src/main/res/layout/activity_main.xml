<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/id_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorLightGray">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_44">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/len_44"
            android:visibility="gone">
            <Button
                android:layout_width="@dimen/len_48"
                android:layout_height="@dimen/len_28"
                android:background="@drawable/radius_rect_shape"
                android:layout_margin="@dimen/len_8"
                android:layout_marginLeft="@dimen/len_20"
                android:layout_marginStart="@dimen/len_20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/str_cancel"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/len_28"
                android:gravity="center"
                tools:text="选中23项目"
                android:layout_centerInParent="true"/>
            <Button
                android:layout_width="@dimen/len_48"
                android:layout_height="@dimen/len_28"
                android:background="@drawable/radius_rect_shape"
                android:layout_margin="@dimen/len_8"
                android:layout_marginEnd="@dimen/len_20"
                android:layout_marginRight="@dimen/len_20"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:text="@string/str_check_all"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_44"
        android:visibility="visible">
        <android.support.design.widget.TabLayout
            android:id="@+id/id_switch_tab_layout"
            android:layout_width="300dp"
            android:layout_height="@dimen/len_44"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabIndicatorHeight="0dp"
            app:tabSelectedTextColor="@color/colorLightBlue"
            app:tabBackground="@color/colorPrimaryDark"
            android:layout_centerInParent="true"/>
        <ImageView
            android:id="@+id/id_more_operation"
            android:layout_width="@dimen/len_24"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/len_10"
            android:layout_marginEnd="@dimen/len_10"
            android:visibility="gone"/>
    </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/id_switch_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/len_40"
        android:background="@color/colorWhite">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorGray"/>
    </FrameLayout>
</LinearLayout>
