<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/len_60"
    android:background="@color/colorWhite"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/id_file_icon"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_margin="@dimen/len_10"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_file"/>
    <TextView
        android:id="@+id/id_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_file_icon"
        android:layout_toEndOf="@id/id_file_icon"
        android:layout_margin="@dimen/len_10"
        android:textSize="@dimen/font_16"
        android:maxLines="1"
        tools:text="@string/app_name"/>
    <TextView
        android:id="@+id/id_file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_file_icon"
        android:layout_toEndOf="@id/id_file_icon"
        android:layout_marginTop="@dimen/len_36"
        android:layout_alignLeft="@id/id_file_name"
        android:layout_alignStart="@id/id_file_name"
        android:textSize="@dimen/font_12"
        tools:text="文件大小"/>
    <TextView
        android:id="@+id/id_file_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id_file_size"
        android:layout_toEndOf="@id/id_file_size"
        android:layout_alignBottom="@id/id_file_size"
        android:layout_marginLeft="@dimen/len_10"
        android:layout_marginStart="@dimen/len_10"
        android:textSize="@dimen/font_12"
        android:text="创建时间"/>
    <ImageButton
        android:id="@+id/id_next_dir"
        android:layout_width="@dimen/len_40"
        android:layout_height="@dimen/len_40"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/len_10"
        style="@android:style/Widget.Holo.Button.Borderless"
        android:src="@drawable/ic_next_24dp"
        android:visibility="gone"/>
    <CheckBox
        android:id="@+id/id_select_file_cb"
        android:layout_width="@dimen/len_24"
        android:layout_height="@dimen/len_24"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:button="@null"
        android:background="@drawable/hcheckbox_style_selector"
        android:layout_margin="@dimen/len_20"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"/>
</RelativeLayout>