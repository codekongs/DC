<?xml version="1.0" encoding="UTF-8"?>
<project name="yunba-socket.io-java-sdk-master" default="all">
  
  
  <property file="yunba-socket.io-java-sdk-master.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/*.yarb/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/CVS/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.egg"/>
    <include name="*.jar"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.swc"/>
    <include name="*.war"/>
    <include name="*.ane"/>
    <include name="*.zip"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
    <exclude name="**/?*.aj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.jdk1.8" value="${jdk.home.jdk1.8}/bin"/>
  <path id="jdk.classpath.jdk1.8">
    <fileset dir="${jdk.home.jdk1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.jdk1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.jdk1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.jdk1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.java_websocket.classpath">
    <pathelement location="${basedir}/libs/java_websocket.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module socket.io-java-client -->
  
  <dirname property="module.socket.io-java-client.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.socket.io-java-client" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.socket.io-java-client" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.socket.io-java-client" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.socket.io-java-client" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="socket.io-java-client.output.dir" value="${module.socket.io-java-client.basedir}/bin"/>
  <property name="socket.io-java-client.testoutput.dir" value="${module.socket.io-java-client.basedir}/out/test/socket.io-java-client"/>
  
  <path id="socket.io-java-client.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="socket.io-java-client.module.production.classpath">
    <path refid="${module.jdk.classpath.socket.io-java-client}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/libs/json-org.jar"/>
    <path refid="library.java_websocket.classpath"/>
  </path>
  
  <path id="socket.io-java-client.runtime.production.module.classpath">
    <pathelement location="${socket.io-java-client.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/libs/json-org.jar"/>
    <path refid="library.java_websocket.classpath"/>
  </path>
  
  <path id="socket.io-java-client.module.classpath">
    <pathelement location="${socket.io-java-client.output.dir}"/>
    <path refid="${module.jdk.classpath.socket.io-java-client}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/libs/json-org.jar"/>
    <path refid="library.java_websocket.classpath"/>
  </path>
  
  <path id="socket.io-java-client.runtime.module.classpath">
    <pathelement location="${socket.io-java-client.testoutput.dir}"/>
    <pathelement location="${socket.io-java-client.output.dir}"/>
    <pathelement location="${idea.home}/lib/junit-4.12.jar"/>
    <pathelement location="${basedir}/libs/json-org.jar"/>
    <path refid="library.java_websocket.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.socket.io-java-client">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.socket.io-java-client">
    <patternset refid="excluded.from.module.socket.io-java-client"/>
  </patternset>
  
  <path id="socket.io-java-client.module.sourcepath">
    <dirset dir="${module.socket.io-java-client.basedir}">
      <include name="src"/>
      <include name="examples"/>
      <include name="tests"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.socket.io-java-client" depends="compile.module.socket.io-java-client.production,compile.module.socket.io-java-client.tests" description="Compile module socket.io-java-client"/>
  
  <target name="compile.module.socket.io-java-client.production" depends="register.custom.compilers" description="Compile module socket.io-java-client; production classes">
    <mkdir dir="${socket.io-java-client.output.dir}"/>
    <javac2 destdir="${socket.io-java-client.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.socket.io-java-client}/javac">
      <compilerarg line="${compiler.args.socket.io-java-client}"/>
      <bootclasspath refid="socket.io-java-client.module.bootclasspath"/>
      <classpath refid="socket.io-java-client.module.production.classpath"/>
      <src refid="socket.io-java-client.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.socket.io-java-client"/>
    </javac2>
    
    <copy todir="${socket.io-java-client.output.dir}">
      <fileset dir="${module.socket.io-java-client.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.socket.io-java-client.basedir}/examples">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.socket.io-java-client.basedir}/tests">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.socket.io-java-client.tests" depends="register.custom.compilers,compile.module.socket.io-java-client.production" description="compile module socket.io-java-client; test classes" unless="skip.tests"/>
  
  <target name="clean.module.socket.io-java-client" description="cleanup module">
    <delete dir="${socket.io-java-client.output.dir}"/>
    <delete dir="${socket.io-java-client.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.socket.io-java-client" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.socket.io-java-client" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>